<?xml version="1.0"?>
<digester-rules>
  <pattern value="repositories/repository">
    <object-create-rule classname="org.pentaho.di.repository.RepositoryPluginMeta"/>
    <call-method-rule methodname="set" paramcount="2"  pattern="name"/>
    <object-param-rule type="java.lang.String" paramnumber="0" value="name" param="name" pattern="name"/>
    <call-param-rule paramnumber="1" pattern="name"/>
    
    <call-method-rule methodname="set" paramcount="2"  pattern="description"/>
    <object-param-rule type="java.lang.String" paramnumber="0" value="description" param="description" pattern="description"/>
    <call-param-rule paramnumber="1" pattern="description"/>
    
    <bean-property-setter-rule pattern="class-name" propertyname="className"/>
    <bean-property-setter-rule pattern="meta-class-name" propertyname="metaClassName"/>
    <bean-property-setter-rule pattern="dialog-class-name" propertyname="dialogClassName"/>
    <call-method-rule methodname="setIdWithStr" paramcount="1"  paramtypes="java.lang.String"/>
    <call-param-rule paramnumber="0" attrname="id"/>
  </pattern>
</digester-rules>
